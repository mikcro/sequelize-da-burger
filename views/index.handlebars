<div class="row">
    <div class="col-md-12">
        <h1 id="title">"Eat-Da-Burger!"</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Burgers I Want to eat:</h2>

        <ul>
            {{#each burgers}}{{#unless this.devoured}}
            <div class="newBurger">

                {{this.burger_name}}

                <form id="devour" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="1">
                <button type="submit">"Devour it!"</button>
                </form>
                </li>
            </div>
            {{/unless}}{{/each}}
            </ul>
            </div>

            <div class="col-md-12">
                <h3>Add a Burger!</h3>
                <form class="create-update-form" action="burgers/create" method="post">

                <div class="form-group">
                    <label for="burger_name" id="name">Burger:</label>
                    <input type="text" id="burger_name" name="burger_name">
                </div>

                <button type="submit" id="AddBtn">Add Burger</button>
                </form>
            </div>

                <div class="col-md-12">
                    <h2>Burgers I...DEVOURED! Wow that was good!</h2>

                    <ul>
                        {{#each burgers}} {{#if this.devoured}}
                        <div class="devouredBurger">
                            <ul>
                                {{this.burger_name}}

                            </ul>
                        </div>
                        {{/if}} {{/each}}
                    </ul>
                </div>
            



